%tr
  %td= transaction.date
  %td= transaction.name
  %td= transaction.description
  %td{class: "#{transaction.value.positive? ? 'positive-number' : 'negative-number'}"}
    = number_to_currency(transaction.value)
  %td{class: "#{transaction.value.positive? ? 'positive-number' : 'negative-number'}"}
    = number_to_currency(transaction.account_balance)
  %td= transaction.category&.name || 'None'
  %td
    .action-column
      = link_to '', edit_transaction_path(transaction), class: 'fas fa-pencil-alt'
      = link_to '', transaction_path(transaction),
                            method: :delete,
                            data: { confirm: 'Are you sure that you want to delete this transaction?' },
                            class: 'fas fa-trash-alt'
